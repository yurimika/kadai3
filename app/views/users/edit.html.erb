<div class="container">
<div class="row">
  <div class="px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
<h4>Name</h4>
<%= f.text_field :name %>
